{
  "name": "play-dev-container-nx-hono",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "format": "biome format --write",
    "check": "turbo run check check:biome check:spell check:type",
    "check:biome": "biome check .",
    "check:spell": "cspell lint . --gitignore --report=simple --dot",
    "fix:biome": "biome format . --write",
    "prepare": "husky"
  },
  "packageManager": "npm@11.6.0",
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "cspell": "9.2.1",
    "husky": "^9.1.7",
    "turbo": "^2.5.8"
  }
}
