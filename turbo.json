{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": []
    },
    "test:run": {
      "dependsOn": []
    },
    "build": {
      "dependsOn": []
    },
    "db:migrate:dev": {
      "env": ["DB_USERNAME", "DB_PASSWORD", "DB_HOST", "DB_DBNAME"],
      "cache": false,
      "persistent": true
    },
    "db:migrate:deploy": {
      "env": ["DB_USERNAME", "DB_PASSWORD", "DB_HOST", "DB_DBNAME"],
      "cache": false
    },
    "db:seed": {
      "env": ["DB_USERNAME", "DB_PASSWORD", "DB_HOST", "DB_DBNAME"],
      "cache": false
    },
    "db:studio": {
      "env": ["DB_USERNAME", "DB_PASSWORD", "DB_HOST", "DB_DBNAME"],
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "check": {
      "dependsOn": ["^check"]
    },
    "check:type": {
      "inputs": ["**/*.ts", "**/*.tsx"]
    },
    "prisma": {
      "dependsOn": [],
      "cache": false
    },
    "//#format": {},
    "//#check:biome": {},
    "//#check:spell": {},
    "//#fix:biome": {}
  }
}
