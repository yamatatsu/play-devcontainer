{
  "name": "@packages/db",
  "version": "0.0.0",
  "private": true,
  "exports": {
    ".": "./src/index.ts"
  },
  "types": "./src/index.ts",
  "scripts": {
    "check:type": "tsc --noEmit",
    "db:migrate:deploy": "npm run prisma -- migrate deploy",
    "db:migrate:dev": "npm run prisma -- migrate dev",
    "db:migrate:reset": "npm run prisma -- migrate reset",
    "db:seed": "npm run prisma -- db seed",
    "db:studio": "npm run prisma -- db studio",
    "db:generate": "prisma generate",
    "prisma": "pnpm env-file -- prisma",
    "env-file": "dotenvx run -f .env.db"
  },
  "dependencies": {
    "@packages/logger": "*",
    "@prisma/adapter-pg": "6.16.2",
    "@prisma/client": "6.16.2",
    "prisma": "6.16.2"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "1.51.0",
    "@types/node": "24.5.2",
    "typescript": "5.9.2"
  }
}
